<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TGRMX CHART SYSTEM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GraficasMixing.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light shadow-sm bg-white px-3">
            <a class="navbar-brand ms-5" href="/">
                <img src="~/Images/Logo.png" alt="Logo" style="height:70px">
            </a>
            <a class="navbar-brand ms-5 fw-bold" href="/">TG CHART SYSTEM</a>
            <ul class="navbar-nav me-auto ms-5 mb-2 mb-lg-0">
                <li class="nav-item ms-6">
                    <a class="nav-link fonts" href="/">Home</a>
                </li>
                <li class="nav-item ms-5">
                    <a class="nav-link" href="/">Our Team</a>
                </li>

                <li class="nav-item ms-5">
                    <a class="nav-link" href="/Account">Help</a>
                </li>
            </ul>
        </nav>
    </header>

    <div class="container-fluid p-5 bg-body-tertiary">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; TGRMX Iot Department 2025 (Ver. 1.2926)<a asp-area="" asp-controller="Home" asp-action="Privacy"></a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
